{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "customer",
    "type": "object",
    "properties": {
        "firstname": 
        {
        "type": "string",
        "minLength": 2,
        "maxLength": 32
        },
        "lastname": 
        {
        "type": "string",
        "minLength": 2,
        "maxLength": 32
        },
        "address": 
        {
        "type": "string",
        "minLength": 4,
        "maxLength": 50
        },
        "city": 
        {
        "type": "string",
        "minLength": 2,
        "maxLength": 32
        },
        "zipcode": 
        {
        "type": "string",
        "pattern": "^[0-9]{5}$"
        },
        "phone": 
        {
            "type": "string",
            "pattern": "^\\d{10}$",
            "minLength": 8,
            "maxLength": 32
        },
        "email": 
        {
        "type": "string",
        "pattern": "^\\S+@\\S+\\.\\S+$",
        "minLength": 5,
        "maxLength": 50
        },
        "password": 
        {
        "type": "string",
        "minLength": 8,
        "maxLength": 32
        }
    },
    "required": [
    "firstname",
    "lastname",
    "address",
    "city",
    "zipcode",
    "phone",
    "email",
    "password"
    ]
}